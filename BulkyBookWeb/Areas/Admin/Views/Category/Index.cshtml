@model IEnumerable<BulkyBook.Models.Category>

@{
    ViewData["Title"] = "Index";
}





<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Category
            </a>
        </div>
    </div>
</div>





<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Category ID</th>
            <th>Category Name</th>
            <th>Category Order</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Category category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td>@category.DisplayOrder</td>
                <td class="text-center" style="width:25%">
                    <div class="w-75 btn-group" role="group">
                        <a class="btn btn-primary mx-2" asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id">
                            <i class="bi bi-pencil-square"></i> &nbsp; Edit
                        </a>
                        <a class="btn btn-danger mx-2" asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id">
                            <i class="bi bi-trash-fill"></i> &nbsp; Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
        
    </tbody>
</table>

